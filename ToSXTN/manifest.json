{
  "manifest_version": 3,
  "name": "Termshift â€“ ToS Analyzer",
  "version": "1.0.0",
  "description": "Highlights risky Terms-of-Service clauses directly on web pages.",
  "action": { "default_popup": "popup/popup.html",
    "default_icon": { "16": "assets/icon16.png", "48": "assets/icon48.png", "128": "assets/icon128.png" } },
  "background": { "service_worker": "background.js" },
  "permissions": ["contextMenus", "storage", "scripting", "activeTab", "tabs", "identity"],
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "https://termshift.com/*",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "content_scripts": [{
    "matches": ["https://*/*", "http://*/*"],
    "js": ["content.js"],
    "run_at": "document_idle",
    "all_frames": true
  }],
  "oauth2": {
    "client_id": "479721416601-ba22dko719nh4or05uab36hmkbo4cpcj.apps.googleusercontent.com",
    "scopes": ["openid", "email", "profile"]
  },
  "icons": { "16": "assets/icon16.png", "48": "assets/icon48.png", "128": "assets/icon128.png" }
}
